@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ApiDataCollection.Pages.FormModel
@{
    ViewData["Title"] = "Form Page";
}

<h1>Country API Filtering Form:</h1>

<form method="post" asp-page-handler="Submit">
    <label><input asp-for="Name" asp-route-param1="@Model.Name" /></label><br />
    <label><input asp-for="Limit" asp-route-param2="@Model.Limit" /></label><br />
    <label><input asp-for="Sorting" asp-route-param3="@Model.Sorting" /></label><br />
    <label><input asp-for="Param4" asp-route-param4="@Model.Param4" /></label><br />
    <button type="submit">Submit</button>
</form>
